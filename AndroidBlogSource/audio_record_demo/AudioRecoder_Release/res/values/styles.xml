<resources xmlns:android="http://schemas.android.com/apk/res/android">
  
    <style name="Set_Item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/set_item_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/gray_sixsix</item>
    </style>
   
    
    <style name="pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_add_show</item>
        <item name="android:windowExitAnimation">@anim/pop_add_dismiss</item>
    </style>
</resources>